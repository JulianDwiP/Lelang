<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.BarangActivity">

    <ImageView
        android:layout_marginBottom="10dp"
        android:id="@+id/img_fotoBarangDetail"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow>
            <Button
                android:id="@+id/btn_hapusBarangDetail"
                android:layout_width="130dp"
                android:layout_marginLeft="30dp"
                android:layout_height="?actionBarSize"
                android:text="Hapus"/>
            <Button
                android:id="@+id/btn_updateBarang"
                android:layout_width="130dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="80dp"
                android:layout_height="?actionBarSize"
                android:text="Edit"/>
        </TableRow>

        <TableRow
            android:layout_marginTop="30dp">

            <TextView
                android:layout_marginLeft="30dp"
                android:textSize="18sp"
                android:text="Nama Barang"/>

            <EditText
                android:id="@+id/tv_namaBarangDetail"/>

        </TableRow>
        <TableRow
            android:layout_marginTop="10dp">

            <TextView
                android:layout_marginLeft="30dp"
                android:textSize="18sp"
                android:text="Status"/>

            <EditText
                android:id="@+id/tv_statusBarangDetail"/>

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btn_simpanDataBarang"
        android:text="Simpan"
        android:layout_width="200dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:layout_height="?actionBarSize"/>

</LinearLayout>
</androidx.core.widget.NestedScrollView>