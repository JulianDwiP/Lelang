<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_daftarBarangFragmentAdmin"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_fotoBarangAdmin"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">
                <TableRow>
                    <TextView
                        android:padding="3dip"
                        android:text="Nama Barang"/>
                    <TextView
                        android:id="@+id/tv_namaBarangAdmin"
                        android:padding="3dip"
                        android:text=": Hahjdhkahdaj"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:padding="3dip"
                        android:text="Status Barang"/>
                    <TextView
                        android:id="@+id/tv_statusBarangAdmin"
                        android:padding="3dip"
                        android:text=": Hahjdhkahdaj"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:padding="3dip"
                        android:text="Harga Awal"/>
                    <TextView
                        android:id="@+id/tv_hargaBarangAdmin"
                        android:padding="3dip"
                        android:text=": 40000"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</ScrollView>